@{
    Layout.Title = T("Register");
}

<div class="form-register">
    <div class="row">
        <div class="col-md-6">
            @using (Html.BeginFormAntiForgeryPost(Url.Action("Register", new { ReturnUrl = Request.QueryString["ReturnUrl"] })))
            {
                @Html.ValidationSummary(T("Account creation was unsuccessful. Please correct the errors and try again.").ToString())
                <fieldset>
                    <legend>@T("Register")</legend>
                    <p class="form-text">@T("Passwords are required to be a minimum of {0} characters in length.", ViewData["PasswordLength"])</p>
                    <div class="form-group">
                        @Html.Label("username", T("Username").Text, new { @class = "sr-only" })
                        @Html.TextBox("username", "", new { autofocus = "autofocus", placeholder = T("Username"), @class = "form-control" })
                        @Html.ValidationMessage("username")
                    </div>
                    <div class="form-group">
                        @Html.Label("email", T("Email").Text, new { @class = "sr-only" })
                        @Html.TextBox("email", "", new { placeholder = T("Email"), @class = "form-control" })
                        @Html.ValidationMessage("email")
                    </div>
                    <div class="row">
                        <div class="col-lg-6 form-group">
                            @Html.Label("password", T("Password").Text, new { @class = "sr-only" })
                            @Html.Password("password", "", new { placeholder = T("Password"), @class = "form-control" })
                            @Html.ValidationMessage("password")
                        </div>
                        <div class="col-lg-6 form-group">
                            @Html.Label("confirmPassword", T("Confirm password").Text, new { @class = "sr-only" })
                            @Html.Password("confirmPassword", "", new { placeholder = T("Confirm Password"), @class = "form-control" })
                            @Html.ValidationMessage("confirmPassword")
                        </div>
                    </div>
                    <div class="form-group">
                        <button class="btn btn-success" type="submit">@T("Register")</button>
                    </div>
                </fieldset>
            }

            @T("If you already have an account:") @Html.ActionLink(T("Log In").Text, "LogOn", new { ReturnUrl = Request.QueryString["ReturnUrl"] })
        </div>
    </div>
</div>